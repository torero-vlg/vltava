@model T034.ViewModel.GuestBookItemViewModel

@{
    ViewBag.Title = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="control-group warning">
    <label class="control-label">@Html.LabelFor(m => m.Author)</label>
    <div>
        @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
        @Html.HiddenFor(m => m.Id)
    </div>
        
    <label class="control-label">@Html.LabelFor(m => m.Contact)</label>
    <div>
        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control" })
    </div>
        
    <label class="control-label">@Html.LabelFor(m => m.Date)</label>
    <div>
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
    </div>

    <label class="control-label">@Html.LabelFor(m => m.Message)</label>
    <div>
        @Html.TextAreaFor(m => m.Message)
    </div>
</div>
<div class="form-actions">
    <button type="submit" class="btn btn-primary" id="btnAddOrEdit">Сохранить изменения</button>
</div>
