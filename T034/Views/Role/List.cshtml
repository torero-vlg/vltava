@model IEnumerable<T034.ViewModel.RoleViewModel>

@{
    ViewBag.Title = "Роли";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Добавить", "AddOrEdit", "Role")
<table id="table_id" class="display">
    <thead>
        <tr>
            <th>Название</th>
            <th>Код</th>
            <th>Операции</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Code</td>
        <td>
            <a href="@Url.Action("AddOrEdit", new { id = item.Id})" title="Редактировать"><i class="fa fa-pencil" aria-hidden="true"></i></a>
            <a href="@Url.Action("Delete", new { id = item.Id})" title="Удалить"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
    }
    </tbody>
</table>
