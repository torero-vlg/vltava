@model T034.ViewModel.MenuItemViewModel

@{
    ViewBag.Title = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddOrEdit", "Menu"))
{
    <div class="control-group warning">
        <label class="control-label">@Html.LabelFor(m => m.Title)</label>
        <div>
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.HiddenFor(m => m.Id)
        </div>
        
        <label class="control-label">@Html.LabelFor(m => m.Url)</label>
        <div>
            @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
        </div>
        
        <label class="control-label">@Html.LabelFor(m => m.OrderIndex)</label>
        <div>
            @Html.TextBoxFor(m => m.OrderIndex, new { @class = "form-control" })
        </div>

        <label class="control-label">@Html.LabelFor(m => m.ParentId)</label>
        <div>
            @Html.DropDownListFor(m => m.ParentId, Model.MenuItems, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    </div>
}
